{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
              "--no-timeouts",
              "--colors",
              "src/tests/**/*.spec.ts",
              "--require",
              "ts-node/register"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
